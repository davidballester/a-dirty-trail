{
    "name": "a-dirty-trail",
    "version": "1.0.0",
    "description": "A humble text-based game with a limitless ambition.",
    "author": "David Ballester Mena",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidballester/a-dirty-trail"
    },
    "main": "build/index.js",
    "types": "build/index.d.js",
    "files": [
        "/build"
    ],
    "scripts": {
        "buildSceneTemplatesForDev": "node markdownAssetsProcessor.js src src",
        "buildSceneTemplates": "node markdownAssetsProcessor.js src build",
        "prebuild": "rimraf ./build",
        "build": "tsc",
        "postbuild": "npm run buildSceneTemplates",
        "predev": "npm run build",
        "prepare": "npm run build",
        "test": "jest src/.*.spec.ts",
        "test-coverage": "npm run test -- --coverage",
        "lint": "eslint --max-warnings=0 src --ext=.ts",
        "lint-fix": "npm run lint -- --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run lint"
        }
    },
    "dependencies": {
        "@types/jest": "^26.0.15",
        "install": "^0.13.0",
        "npm": "^6.14.8",
        "ts-node": "^9.0.0",
        "uuid": "^8.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "babel-jest": "^26.6.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.6.0",
        "jest-when": "^2.8.0",
        "markdown-yaml-metadata-parser": "^2.1.1",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.3"
    }
}
